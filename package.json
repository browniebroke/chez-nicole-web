{
  "name": "chez-nicole-web",
  "description": "Website for Chez Nicole",
  "version": "2.0.0",
  "author": "Bruno Alla <alla.brunoo@gmail.com>",
  "license": "MIT",
  "keywords": [
    "gatsby",
    "gatstrap",
    "starter"
  ],
  "main": "n/a",
  "engines": {
    "node": "~16",
    "npm": "~8"
  },
  "dependencies": {
    "@browniebroke/gatsby-image-gallery": "7.0.6",
    "@browniebroke/react-ui-components": "1.8.3",
    "bootstrap": "4.6.1",
    "gatsby": "4.12.1",
    "gatsby-plugin-google-gtag": "4.12.1",
    "gatsby-plugin-image": "2.12.1",
    "gatsby-plugin-manifest": "4.12.1",
    "gatsby-plugin-netlify": "4.2.0",
    "gatsby-plugin-offline": "5.12.1",
    "gatsby-plugin-react-helmet": "5.12.1",
    "gatsby-plugin-robots-txt": "1.7.1",
    "gatsby-plugin-sass": "5.12.1",
    "gatsby-plugin-sentry": "1.0.1",
    "gatsby-plugin-sharp": "4.12.1",
    "gatsby-plugin-sitemap": "5.12.1",
    "gatsby-plugin-typescript": "4.12.1",
    "gatsby-source-filesystem": "4.12.1",
    "gatsby-transformer-sharp": "4.12.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-icons": "4.3.1",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@types/react-helmet": "6.1.5",
    "@typescript-eslint/parser": "5.20.0",
    "bundlewatch": "0.3.3",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "node-sass": "7.0.1",
    "prettier": "2.6.2"
  },
  "scripts": {
    "build": "gatsby build",
    "serve": "gatsby serve",
    "bundlewatch": "bundlewatch",
    "deploy": "gatsby build --prefix-paths",
    "develop": "gatsby develop",
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "react",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "semi": false,
          "arrowParens": "always"
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "github>browniebroke/renovate-configs:js-app"
    ],
    "packageRules": [
      {
        "packageNames": [
          "bootstrap"
        ],
        "allowedVersions": "<5"
      }
    ]
  },
  "bundlewatch": [
    {
      "path": "./public/app-*.js",
      "maxSize": "25 kB"
    },
    {
      "path": "./public/component---src-pages-!(photos)-*.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./public/component---src-pages-photos-*.js",
      "maxSize": "35 kB"
    }
  ]
}
